<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setluong"
    tools:context=".Activities.SetLuongActiviy">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_marginTop="50dp"
          android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#F44336"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="SET LƯƠNG"></TextView>
        <TextView
            android:id="@+id/tvMANV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFD606"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="MÃ NHÂN VIÊN : "></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#78E87C"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="LƯƠNG THƯỞNG :"></TextView>

            <EditText
                android:id="@+id/etLUONGTHUONG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="VND"
                android:inputType="number"
                android:textColor="#F1EDE9"
                android:textColorHint="#7EFFEB3B"
                android:textSize="25sp"
                android:textStyle="bold"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#C10320"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="LƯƠNG PHẠT :"></TextView>

            <EditText
                android:id="@+id/etLUONGPHAT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="VND"
                android:inputType="number"
                android:textColor="#F3EFEA"
                android:textColorHint="#7CFFEB3B"
                android:textSize="25sp"
                android:textStyle="bold"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F6F5F5"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="SỐ GIỜ :"></TextView>

            <EditText
                android:id="@+id/etSOGIO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="VND"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="#7DFFEB3B"
                android:textSize="25sp"
                android:textStyle="bold"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="THÁNG/NĂM :"></TextView>

            <EditText
                android:id="@+id/etTHANGNAM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MM/YYYY"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#7DFFEB3B"
                android:textSize="25sp"
                android:textStyle="bold"></EditText>
        </LinearLayout>
        <Button
            android:id="@+id/btnSET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#AE0053F6"
            android:textSize="25sp"
            android:inputType="number"
            android:text="SET LƯƠNG"
            android:textStyle="bold"></Button>
    </LinearLayout>
</ScrollView>